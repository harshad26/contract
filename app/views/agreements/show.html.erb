<div class="page-header">
  <h1>Contrato</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Fornecedor:</strong></dt>
  <dd><%= @agreement.provider %></dd>
  <dt><strong>Evento:</strong></dt>
  <dd><%= Agreement::EVENT.index(@agreement.event_id) %></dd>
  <dt><strong>Objeto:</strong></dt>
  <dd><%= @agreement.object %></dd>
  <dt><strong>Data de início:</strong></dt>
  <dd><%= @agreement.start_date %></dd>
  <dt><strong>Data final:</strong></dt>
  <dd><%= @agreement.end_date %></dd>
  <dt><strong>Descricao:</strong></dt>
  <dd><%= @agreement.description %></dd>
  <dt><strong>Valor total:</strong></dt>
  <dd><%= @agreement.amount %></dd>
  <dt><strong>Status:</strong></dt>
  <dd><%= @agreement.status %></dd>
</dl>

<%= link_to "Costas", agreements_path, :class => 'btn btn-default'  %>
<%= link_to "Editar", edit_agreement_path(@agreement), :class => 'btn btn-default' %>
<%= link_to "Excluir", agreement_path(@agreement), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza?')) }, :class => 'btn btn-danger' %>
